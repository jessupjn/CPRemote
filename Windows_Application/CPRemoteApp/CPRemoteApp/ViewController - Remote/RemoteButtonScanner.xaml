<UserControl
    x:Class="CPRemoteApp.ViewController___Remote.RemoteButtonScanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CPRemoteApp.ViewController___Remote"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    >
    
    <Border BorderBrush="Blue" BorderThickness="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            
            <ListView Name="buttonList" HorizontalAlignment="Center" Grid.Row="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBox Text="{Binding}" IsReadOnly="True"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Button Name="selected_button" Background="Black" Grid.Row="1" HorizontalAlignment="Center" MinWidth="380" MinHeight="230">
                <TextBox HorizontalAlignment="Center" Text="Channel 3" FontSize="64" Foreground="Blue" Background="Black"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
