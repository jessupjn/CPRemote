<Application
    x:Class="CPRemoteApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CPRemoteApp">

    <Application.Resources>
        <SolidColorBrush x:Key="ListViewItemSelectedBackgroundThemeBrush" Color="Orange" />
        <SolidColorBrush x:Key="FlyoutBackgroundThemeBrush" Color="Purple"/>
        <SolidColorBrush x:Key="FlyoutBorderThemeBrush" Color="White"/>
        <Style TargetType="MenuFlyoutPresenter">
            <Setter Property="BorderThickness" Value="5" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style TargetType="MenuFlyoutItem">
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Application.Resources>
</Application>
