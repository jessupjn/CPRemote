<Page
    x:Class="CPRemoteApp.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CPRemoteApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    
    <Canvas Background="#FF3E106C" Name="Background">

        <TextBlock Name="titleText"/>
        <Button Name="_goToRemote" Width="700" Height="700" Foreground="White" Canvas.Top="39" BorderThickness="0" Canvas.Left="330">
            <Image Source="ms-appx:///img/remote_symbol.png"/>
        </Button>

        <Canvas Name="_goToSettings_frame" Height="75" Width="75">
            <Border Height="75" Width="75" BorderThickness="2" CornerRadius="10" BorderBrush="White"/>
            <Button Name="_goToSettings" Width="75" Height="75" BorderThickness="0">
                <Image Source="ms-appx:///img/settings_gear.png"/>
            </Button>
        </Canvas>

        <Canvas Name="_bluetooth_status_frame" Height="75" Width="75">
            <Rectangle Name="_bluetooth_status_indicator" Height="75" Width="75"/>
            <Border Height="75" Width="75" BorderThickness="2" CornerRadius="10" BorderBrush="White"/>
            <Image Canvas.Left="5" Canvas.Top="5" Height="65" Width="65" Source="ms-appx:///img/bluetooth_symbol.png"/>
        </Canvas>
    </Canvas>


</Page>
